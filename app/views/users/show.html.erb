<p id="notice"><%= notice.html_safe if notice %></p>

<div class="page-header">
  <h1>My Info <small>who what and where</small></h1>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="jumbotron text-center">
      <%= selfieMarkup(@user) %>
    </div>
  </div>
  <div class="col-md-8">
    <ul class="list-group">
      <li class="list-group-item">
	<h4>Name: <small><%= @user.name %></small></h4>
      </li>
      <li class="list-group-item">
	<h4>Email: <a href="mailto:<%= @user.email %>"><small><%= @user.email %></small></a></h4>
      </li>
    </ul>
  </div>
</div>

<% if current_user.id == @user.id %>
  <%= link_to '<button class="btn btn-info">Edit</button>'.html_safe, edit_user_path(@user) %>
<% end %>
<%= link_to '<button class="btn btn-default">Back</button>'.html_safe, users_path %>
