<p id="notice"><%= notice.html_safe if notice %></p>

<div class="page-header">
  <h1>Users <small>everyone that loves music</small></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th class="text-center">Selfie</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td class="text-center"><%= selfieMarkup(user) %></td>
        <td><%= user.email %></td>
        <td><%= link_to '<button class="btn btn-info">Show</button>'.html_safe, user %></td>
        <% if current_user.id == user.id %>
        <td><%= link_to '<button class="btn btn-warning">Edit</button>'.html_safe, edit_user_path(user) %></td>
        <td><%= link_to '<button class="btn btn-danger">Destroy</button>'.html_safe, user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
	<td></td>
	<td></td>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class=> 'btn btn-success' %>
